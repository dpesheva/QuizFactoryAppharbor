@model QuizFactory.Mvc.ViewModels.QuestionViewModel

@{
    ViewBag.Title = "Delete";
}

<h2 class="red text-shadow">Delete</h2>

<h3 class="gray">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal gray">
        <dt>
            @Html.DisplayNameFor(model => model.QuestionText)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QuestionText)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group col-md-offset-2">
            <input type="submit" value="Delete" class="btn btn-danger box-shadow" />
        </div>
    }
    @Html.ActionLink("Back to Questions", "Index", new { quizId = @Model.QuizId })
</div>
