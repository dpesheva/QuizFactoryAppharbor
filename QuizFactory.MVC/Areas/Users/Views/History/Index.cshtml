@using MvcPaging

@model IPagedList<QuizFactory.Mvc.Areas.Users.ViewModels.TakenQuizViewModel>

@{
    ViewBag.Title = "Score Board";
}

<h2 class="green text-shadow">My Results</h2>


<table class="table box-shadow gray">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Score)
        </th>
        <th></th>
    </tr>
    <tbody id="content">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Score)%
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                </td>
            </tr>
        }
    </tbody>

</table>
<div class="pager gray">
    @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
</div>